{
  "builds": [
    {
      "src": "pages/api/main.go",
      "use": "@vercel/go",
      "config": {
        "analyzeCommand": "/var/task/node_modules/@vercel/go/dist/analyze -modpath=./" // Set -modpath explicitly
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "pages/api/main.go"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "public, max-age=3600, immutable" },
      "dest": "/$1"
    }
  ]
}
