{
  "builds": [
    {
      "src": "pages/api/main.rs",
      "use": "@vercel/rust@latest",
      "config": {
        "installCommand": "cargo install --locked --path .",
        "buildCommand": "cargo build --release",
        "devCommand": "cargo watch -x run"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(?<video_id>[^/]+)",
      "dest": "/api/main.rs"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "public, max-age=3600, immutable" },
      "dest": "/$1"
    }
  ]
}
